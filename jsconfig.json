{
    "compilerOptions": {
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/js/*"],
            "src/*": ["src/*"],
            "src/utils/*": ["src/utils/*"],
            "views": ["views/*"],
            "templates/*": ["templates/*"],
            "styles/*": ["styles/*.scss"],
            "types/*": ["types/*"]
        }
    },
    "exclude": ["node_modules", "public"]
}
