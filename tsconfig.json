{
    "compilerOptions": {
        "jsx": "react-jsx",
        "baseUrl": ".",
        "esModuleInterop": true,
        // "moduleResolution": "nodenext",
        "paths": {
            "src/*": ["src/*"],
            "src/utils/*": ["src/utils/*"],
            "views/*": ["views/*"],
            "types/*": ["types/*"],
            "types/views": ["types/views.ts"],
            "templates/*": ["templates/*"],
            "styles/*": ["styles/*.module.scss"],
            "@/*": ["resources/js/*"]
        }
    },
    "exclude": ["node_modules", "public"]
}
